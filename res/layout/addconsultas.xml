<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* CPF/Paciente:" />

    <EditText
        android:id="@+id/edTextPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Data/Hora: " />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnChangeDate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/iconecalendario"
            android:minHeight="0dp" />

        <EditText
            android:id="@+id/editTextData"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
			android:editable="false"
             />

        <Button
            android:id="@+id/btnChangeTime"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/iconerelogio" 
            />

        <EditText
            android:id="@+id/editTextHora"
            android:layout_width="90dp"
            android:layout_height="wrap_content" 
            android:editable="false"
            />

    </TableRow>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Agente de Saúde:" />

    <EditText
        android:id="@+id/edTextAgente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:editable="false"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Posto de Saúde:" />

    <EditText
        android:id="@+id/editTextPosto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:editable="false"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:" />

    <EditText
        android:id="@+id/editTextDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Campos obrigatórios" 
        android:textColor="#FF0000"
        android:textSize="17px" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" 
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     Salvar     "
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Cancelar   " 
            android:layout_gravity="center" />

    </TableRow>

</LinearLayout>